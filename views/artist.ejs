<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Music Player</title>
    <link rel="stylesheet" type="text/css" href="/css/stylesheet.css">
  </head>
  <body>

    <%- include('partials/navbar') %>

    <div class="container">
      <p><%= name %></p>
      <p>Albums: <%= albums.length %></p>
      <p><%= genre %></p>
      <% albums.forEach((album) => { %>
        <a href="/albums/<%= album.id %>" class="album-info-link">
          <p><%= album.title %></p>
        </a>
        <p><%= album.year %></p>
        <p><%= album.song_count %> Songs</p>
      <% }) %>
    </div>

  </body>
</html>
